ScrollScreen subroutine
	;inc scroll_pos
        clc
        lda scroll_pos
        adc #1
        bcc .noNextTable
        inc scroll_table
.noNextTable:
	sta scroll_pos
        sta PPU_SCROLL
        lda scroll_pos + 1
